{
  "cSpell.customDictionaries": {
    "cspell-clog": {
      "name": "cspell-clog",
      "path": "${workspaceRoot}/.vscode/cspell-clog.txt",
      "description": "Words used in this project",
      "addWords": true
    },
    "custom": true, // Enable the `custom` dictionary
    "internal-terms": false // Disable the `internal-terms` dictionary
  },
  "cSpell.dictionaries": [
    "cspell-clog"
  ],
  "workbench.colorTheme": "Default Light Modern",
  "workbench.colorCustomizations": {
    "[Default Light Modern]": {
      "activityBar.background": "#C2A649",
      "sideBar.background": "#c2a6490e",
      "activityBarBadge.foreground": "#ffffff",
      "statusBar.background": "#90b6457c",
      "statusBar.foreground": "#b6066f"
    }
  },
  // Default number of spaces a tab is equal to.
  "editor.tabSize": 2,
  // Insert spaces when pressing Tab.
  "editor.insertSpaces": true,
  // Guess the settings, then use overrides below else defaults
  "editor.detectIndentation": true,
  // Default rulers
  "editor.rulers": [
    79,
    80,
    120
  ],
  "[go]": {
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "[html]": {
    "editor.tabSize": 2,
    "editor.rulers": [
      120
    ]
  },
  "[javascript]": {
    "editor.rulers": [
      120
    ],
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.rulers": [
      120
    ],
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [
      79,
      80,
      120
    ]
  },
  "[markdown]": {
    "editor.tabSize": 4,
    "editor.rulers": [
      79,
      80,
      120
    ]
  },
}